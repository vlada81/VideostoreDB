@model VideostoreDB.ViewModel.MovieGenreViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Movie Details</h2>
<br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="col-md-3">
                <h3>Title: </h3>
            </div>
            <div class="col-md-push-6">
                <h3>@Model.Movie.Name</h3>
            </div>
            <hr />
            <div class="col-md-4">
                <h5>Price: </h5>
            </div>
            <div class="col-md-6">
                <h5>@Model.Movie.Price</h5>
            </div>
            <div class="col-md-4">
                <h5>Genre: </h5>
            </div>
            <div class="col-md-6">
                @foreach (var g in Model.Genres)
            {
                if (g.GenreId == Model.SelectedGenreId)
                {
                        <h5>@g.Name</h5>
                    }
                }
            </div>
            <div class="col-md-4">
                <h5>Release Date: </h5>
            </div>
            <div class="col-md-6">
                <h5>@Model.Movie.ReleaseDate</h5>
            </div>
            <div class="col-md-6">

            </div>
        </div>
    </div>
</div>
